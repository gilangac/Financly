<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ijo"
    tools:context=".tambahDataActivity">

    <TextView
        android:id="@+id/txtTambahdata"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tambah Data"
        android:textStyle="bold"
        android:layout_marginTop="30dp"
        android:textSize="15pt"
        android:textColor="#FFFFFF"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tentukan pilihanmu !"
        android:textColor="#FFFFFF"
        android:textSize="7pt"
        app:layout_constraintTop_toBottomOf="@id/txtTambahdata"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_tambah"
        android:layout_marginTop="120dp">

         <LinearLayout
             android:id="@+id/btnTarget"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:gravity="center"
             android:orientation="vertical">

             <LinearLayout
                 android:layout_width="160dp"
                 android:layout_height="160dp"
                 android:orientation="vertical"
                 android:gravity="center"
                 android:layout_marginBottom="50dp">

                 <ImageView
                     android:layout_width="110dp"
                     android:layout_height="110dp"
                     android:src="@drawable/logo_tambahtarget"
                     app:tint="@color/ijo" />

                 <TextView
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:fontFamily="@font/fredoka_one"
                     android:text="Bikin target baru"
                     android:textColor="@color/ijo"
                     android:textSize="8pt" />
             </LinearLayout>

             <LinearLayout
                 android:id="@+id/btnTabungan"
                 android:layout_width="160dp"
                 android:layout_height="160dp"
                 android:orientation="vertical"
                 android:gravity="center"
                 android:layout_marginTop="50dp">

                 <ImageView
                     android:layout_width="130dp"
                     android:layout_height="130dp"
                     android:src="@drawable/logo_tabungan"
                     app:tint="@color/ijo" />

                 <TextView
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="Tambah tabungan"
                     android:textSize="8pt"
                     android:fontFamily="@font/fredoka_one"
                     android:textColor="@color/ijo"/>
             </LinearLayout>
         </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>